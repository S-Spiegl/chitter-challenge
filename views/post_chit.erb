<html>
<head>
  <link rel="stylesheet" type="text/css" href="/stylesheets/chitter3.css">
</head>
<%# 
<h1>Post a chit</h1>
<form action="post_chit" method="post">
  <input type="text" name="handle" placeholder="type your handle here"><br>
  <input type="text" name="chit" placeholder="type your chit here" /><br>
  <input type="submit" value="post chit!" />
</form>
</body>
</html> %>

<div class="bi-column-one-post">
  <h1>The latest chits</h1>
  <% @chits.reverse.each do |chit|%>
  <div>
    <%= chit.handle %><br>
    <%= chit.content %><br>
    <%= chit.timestamp%>
  </div>
<% end %>
</div>

<div class="bi-column-two-post">
  <div class="post-chit-main-container">
    <div class="post-chit-box">
        <form class="post-form" action="post_chit" method="post">
          <textarea class="post-input" type="text" name="chit" placeholder="type your chit here"> </textarea><br>
          <div class="input-box">
            <div class="divider">
            </div>
            <input class="input" type="text" name="handle" placeholder="type your handle here"><br>
          </div>
          <input type="submit" value="post chit!" />
        </form>
    </div>
  </div>
  <h6>Photo by <a href="https://unsplash.com/@maritafox?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Marita Kavelashvili</a> on <a href="https://unsplash.com/s/photos/forest?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText">Unsplash</a></h6>
</div>
</body>
