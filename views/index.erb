<h1>The latest chits</h1>
<form method="get" action="/post_chit">
<input type="submit" name="go_to_post_chit" value="get chitting!"/>
</form>
<form action="/sign_up" method="get">
<input type="submit" name="go_to_sign_up" value="sign up!"/>
</form>
  <% @chits.reverse.each do |chit|%>
    <div>
      <%= chit.handle %><br>
      "<%= chit.content %>"<br>
      <%= chit.timestamp %><br>
    </div>
  <% end %>

